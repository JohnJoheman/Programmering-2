            <TextBlock Grid.Row="5" Text="6" FontSize="40" TextAlignment="Right"/>
            <TextBlock Grid.Row="6" Text="7" FontSize="40" TextAlignment="Right"/>
            <TextBlock Grid.Row="7" Text="8" FontSize="40" TextAlignment="Right"/>
            <TextBlock Grid.Row="8" Text="9" FontSize="40" TextAlignment="Right"/>
            <TextBlock Grid.Row="9" Text="10" FontSize="40" TextAlignment="Right"/>
        </Grid>
        <Grid Name="oneToTenHolder2" Grid.Column="4" Grid.Row="2" Margin="0,-85,10,0" HorizontalAlignment="Left" Height="450">
