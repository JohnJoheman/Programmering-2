            <TextBlock Grid.Row="8" Text="9" FontSize="40" TextAlignment="Right"/>
            <TextBlock Grid.Row="9" Text="10" FontSize="40" TextAlignment="Right"/>
        </Grid>
        <Grid Name="AtoJHolder" Grid.Column="1" Grid.Row="1" Margin="0,80,0,0" VerticalAlignment="Bottom" HorizontalAlignment="left" Width="500">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0" Text="A" FontSize="40" TextAlignment="center"/>
